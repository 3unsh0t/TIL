class Solution {
    public int numberOfSteps(int num) {
        int count = 0;
        while(num>0){
            if ((num&1) == 0){ //Before we used num%2
                count++;
                num >>= 1;  //Before we used num/=2
            } else{
                count++;
                num -= 1;
            }
        }
        return count;
    }
}
